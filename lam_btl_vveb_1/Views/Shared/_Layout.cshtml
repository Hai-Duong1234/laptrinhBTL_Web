        <h2>Sản phẩm nổi bật</h2> <!-- Tiêu đề nằm ở hàng trên cùng -->
        <div class="products-container">
            <div class="product">
                <img src="imges/camera.jpg" alt="Sản phẩm nổi bật 1">
                <p>Sản phẩm nổi bật 1 - Khuyến mãi lớn</p>
                <button>Mua ngay</button>
            </div>
            <div class="product">
                <img src="imges/laptop.jpg" alt="Sản phẩm nổi bật 2">
                <p>Sản phẩm nổi bật 2 - Giảm giá 30%</p>
                <button>Mua ngay</button>
            </div>
            <div class="product">
                <img src="imges/phone.jpg" alt="Sản phẩm nổi bật 3">
                <p>Sản phẩm nổi bật 3 - Mới ra mắt</p>
                <button>Mua ngay</button>
            </div>
            <div class="product">
                <img src="imges/sony.jpg" alt="Sản phẩm nổi bật 4">
                <p>Sản phẩm nổi bật 4 - Mua 2 tặng 1</p>
                <button>Mua ngay</button>
            </div>
        </div>
    </section>

